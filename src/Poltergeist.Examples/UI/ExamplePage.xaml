<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Poltergeist.Examples.UI.ExamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.Examples.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Poltergeist.UI.Controls"
    xmlns:macros="using:Poltergeist.Modules.Macros"
    mc:Ignorable="d"
    Style="{StaticResource TabPageStyle}"
    >

    <Page.Resources>
        <CollectionViewSource x:Name="ExampleCVS" IsSourceGrouped="true"/>
    </Page.Resources>

    <Grid
        ColumnSpacing="{StaticResource TabPageColumnSpacing}"
        >
        <ScrollViewer
            Style="{StaticResource VerticalScrollViewerStyle}"
            Grid.Row="2"
            >
            <StackPanel
                >
                <GridView
                    ItemsSource="{Binding Source={StaticResource ExampleCVS}, Mode=OneTime}"
                    
                    >
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem" BasedOn="{StaticResource DefaultGridViewItemStyle}">
                            <Setter Property="Margin" Value="4, 6"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Key}" Margin="0, 8, 0, 0"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </GridView.GroupStyle>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="macros:MacroInstance">
                            <ItemContainer>
                                <Grid
                                    DoubleTapped="Grid_DoubleTapped"
                                    Style="{StaticResource CardGridStyle}"
                                    Margin="0"
                                    >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="300" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60" />
                                    </Grid.RowDefinitions>
                                    
                                    <controls:IconControl
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Width="32"
                                        Height="32"
                                        FontSize="24"
                                        DataContext="{Binding Icon, Mode=OneTime, TargetNullValue=ms-appx:///Poltergeist/Assets/macro_32px.png}"
                                        />
                                    
                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Stretch"
                                        >
                                        <TextBlock
                                            Text="{Binding Title, Mode=OneTime}"
                                            Style="{StaticResource ListTitleStyle}"
                                            FontWeight="SemiBold"
                                            FontSize="15"
                                            TextTrimming="CharacterEllipsis"
                                            />
                                        <TextBlock 
                                            Opacity="0.7"
                                            TextWrapping="WrapWholeWords"
                                            MaxLines="2"
                                            TextTrimming="CharacterEllipsis"
                                            Text="{Binding Description, Mode=OneTime}"
                                            Style="{StaticResource ListSubTitleStyle}"
                                            Foreground="{StaticResource SecondaryTextColor}"
                                            Visibility="{Binding Description, Converter={StaticResource FalsyToCollapsedConverter}, Mode=OneTime}"
                                            />
                                    </StackPanel>
                                </Grid>
                            </ItemContainer>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
