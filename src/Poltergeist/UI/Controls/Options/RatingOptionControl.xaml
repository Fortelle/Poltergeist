<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Poltergeist.UI.Controls.Options.RatingOptionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.UI.Controls.Options"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <RatingControl
        x:Name="RatingControl1"
        HorizontalAlignment="Left"
        IsClearEnabled="{x:Bind IsClearEnabled, Mode=OneTime}" 
        MaxRating="{x:Bind MaxRating, Mode=OneTime}"
        Caption="{x:Bind Caption, Mode=OneTime}"
        Value="{x:Bind Value, Mode=TwoWay}"
        ValueChanged="RatingControl_ValueChanged"
        >
    </RatingControl>
</UserControl>
