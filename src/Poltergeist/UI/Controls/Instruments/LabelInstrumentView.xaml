<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Poltergeist.UI.Controls.Instruments.LabelInstrumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.UI.Controls.Instruments"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Poltergeist.UI.Controls"
    x:Name="LabelInstrumentUserControl"
    mc:Ignorable="d">

    <ItemsRepeater
        ItemsSource="{x:Bind ViewModel.Items, Mode=OneTime}"
        >
        <ItemsRepeater.Layout>
            <UniformGridLayout
                ItemsStretch="Fill"
                Orientation="Horizontal"
                MaximumRowsOrColumns="{Binding ViewModel.MaximumColumns, ElementName=LabelInstrumentUserControl, Mode=OneTime}"
                />
        </ItemsRepeater.Layout>
        <ItemsRepeater.ItemTemplate>
            <DataTemplate>
                <Border
                    CornerRadius="4"
                    BorderBrush="{Binding Background, Mode=OneTime}"
                    Margin="0, 0, 8, 8"
                    BorderThickness="1, 1, 1, 1"
                    Background="{Binding Background, Mode=OneTime, TargetNullValue=LightGray}"
                    >
                    <Grid
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Padding="8"
                        ColumnSpacing="4"
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <controls:IconControl
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Icon="{Binding Icon, Mode=OneTime}"
                            Foreground="{Binding Foreground, Mode=OneTime}"
                            FontSize="12"
                            Opacity="0.75"
                            />

                        <TextBlock 
                            Grid.Column="1"
                            Text="{Binding Label, Mode=OneTime}" 
                            VerticalAlignment="Center"
                            TextAlignment="Left"
                            Foreground="{Binding Foreground, Mode=OneTime}"
                            Opacity="0.75"
                            FontSize="12"
                            />

                        <TextBlock 
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            Text="{Binding Text, Mode=OneTime}" 
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            HorizontalAlignment="Stretch"
                            FontWeight="SemiBold"
                            FontSize="16"
                            Foreground="{Binding Foreground, Mode=OneTime}"
                            />
                    </Grid>
                </Border>
            </DataTemplate>
        </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>
</UserControl>
