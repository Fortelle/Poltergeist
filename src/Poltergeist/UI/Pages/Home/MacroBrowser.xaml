<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Poltergeist.UI.Pages.Home.MacroBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.UI.Pages.Home"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Poltergeist.Helpers.Converters"
    xmlns:controls="using:Poltergeist.UI.Controls"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:DateTimeToAgoConverter x:Key="DateTimeToAgoConverter" />
        <converters:FalsyToFadeConverter x:Key="FalsyToFadeConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <CommandBar
            Background="Transparent"
            Grid.Row="4"
            DefaultLabelPosition="Right"
            OverflowButtonVisibility="Collapsed"
            HorizontalAlignment="Left"
            IsOpen="False"
            >

            <AppBarButton
                x:Uid="/Poltergeist/Home/NewInstanceButton"
                Icon="Add"
                Command="{x:Bind ViewModel.NewInstanceCommand, Mode=OneTime}"
                />

        </CommandBar>

        <Border
            Grid.Row="1"
            BorderThickness="0, 0, 0, 1"
            Margin="0, 0, 0, 8"
            BorderBrush="{StaticResource DividerStrokeColorDefaultBrush}"
            />
        
        <Border
            Grid.Row="3"
            BorderThickness="0, 0, 0, 1"
            Margin="0, 8, 0, 0"
            BorderBrush="{StaticResource DividerStrokeColorDefaultBrush}"
            />

        <Grid
            Grid.Row="0"
            Margin="{StaticResource ListViewHeaderMargin}"
            Padding ="8"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Uid="/Poltergeist/Home/MacroListViewHeader"
                Grid.Column="1"
                FontWeight="Bold"
                TextAlignment="Center"
                Tapped="ListViewHeader_Tapped"
                />
            <TextBlock
                x:Uid="/Poltergeist/Home/TotalRunCountListViewHeader"
                Grid.Column="3"
                TextAlignment="Center"
                FontWeight="Bold"
                Tapped="ListViewHeader_Tapped"
                />
            <TextBlock
                x:Uid="/Poltergeist/Home/LastRunTimeListViewHeader"
                Grid.Column="4"
                TextAlignment="Center"
                FontWeight="Bold"
                Tapped="ListViewHeader_Tapped"
                >
            </TextBlock>
        </Grid>

        <ScrollViewer
            Style="{StaticResource VerticalScrollViewerStyle}"
            Grid.Row="2"
            >
            <StackPanel
                >
                <ListView
                    ItemsSource="{x:Bind ViewModel.Macros, Mode=OneWay}"
                    >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Padding ="8, 16"
                                DoubleTapped="Grid_DoubleTapped"
                                Background="Transparent"
                                Opacity="{Binding Template, Converter={StaticResource FalsyToFadeConverter}, Mode=OneTime}"
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="12*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Grid.ContextFlyout>
                                    <MenuFlyout
                                        >
                                        <MenuFlyoutItem
                                            x:Uid="/Poltergeist/Home/OpenMenuFlyoutItem"
                                            FontWeight="Bold"
                                            Click="OpenMenuFlyoutItem_Click"
                                            IsEnabled="{Binding Template, Converter={StaticResource IsTruthyConverter}, Mode=OneTime}"
                                            >
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8A7;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                        
                                        <MenuFlyoutItem
                                            x:Uid="/Poltergeist/Home/EditPropertiesMenuFlyoutItem"
                                            IsEnabled="{Binding IsLocked, Converter={StaticResource NotConverter}, Mode=OneTime}"
                                            Click="EditPropertiesMenuFlyoutItem_Click"
                                            >
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE713;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutSeparator/>

                                        <MenuFlyoutItem
                                            x:Uid="/Poltergeist/Home/OpenPrivateFolderMenuFlyoutItem"
                                            Click="OpenPrivateFolderMenuFlyoutItem_Click"
                                            >
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE838;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            x:Uid="/Poltergeist/Home/CreateShortcutMenuFlyoutItem"
                                            Click="CreateShortcutMenuFlyoutItem_Click"
                                            >
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8E5;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem
                                            x:Uid="/Poltergeist/Home/DeleteMenuFlyoutItem"
                                            IsEnabled="{Binding IsLocked, Converter={StaticResource NotConverter}, Mode=OneTime}"
                                            Click="DeleteMenuFlyoutItem_Click"
                                            >
                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE74D;" />
                                            </MenuFlyoutItem.Icon>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Grid.ContextFlyout>

                                <controls:IconControl
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Width="32"
                                    Height="32"
                                    FontSize="24"
                                    DataContext="{Binding Icon, Mode=OneTime, TargetNullValue=ms-appx:///Poltergeist/Assets/macro_32px.png}"
                                    />
                                
                                <StackPanel
                                    Grid.Column="1"
                                    Padding="{StaticResource SmallLeftMargin}"
                                    VerticalAlignment="Center"
                                    >
                                    <TextBlock
                                        Text="{Binding Title, Mode=OneTime}"
                                        Style="{StaticResource ListTitleStyle}"
                                        FontWeight="SemiBold"
                                        FontSize="15"
                                        TextTrimming="CharacterEllipsis"
                                        />
                                    <TextBlock 
                                        Opacity=".75"
                                        Text="{Binding Description, Mode=OneTime}"
                                        Style="{StaticResource ListSubTitleStyle}"
                                        Foreground="{StaticResource SecondaryTextColor}"
                                        Visibility="{Binding Description, Converter={StaticResource FalsyToCollapsedConverter}, Mode=OneTime}"
                                        />
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="2"
                                    Padding="{StaticResource SmallLeftRightMargin}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    >
                                    <SymbolIcon
                                        Symbol="OutlineStar"
                                        Visibility="{Binding Properties.IsFavorite, Mode=OneTime, Converter={StaticResource FalsyToCollapsedConverter}}"
                                        />
                                </StackPanel>

                                <TextBlock
                                    Grid.Column="3"
                                    Text="{Binding Properties.RunCount, Mode=OneTime, TargetNullValue=-}"
                                    Foreground="{StaticResource SecondaryTextColor}"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    />
                            
                                <TextBlock
                                    Grid.Column="4"
                                    Foreground="{StaticResource SecondaryTextColor}"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding Properties.LastRunTime, Converter={StaticResource DateTimeToAgoConverter}, Mode=OneTime, TargetNullValue=--}" 
                                    />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
