<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Poltergeist.UI.Pages.Macros.MacroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.UI.Pages.Macros"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:instruments="using:Poltergeist.UI.Controls.Instruments"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:converters="using:Poltergeist.Helpers.Converters"
    xmlns:controls="using:Poltergeist.UI.Controls"
    Style="{StaticResource TabPageStyle}"
    mc:Ignorable="d"
    >

    <Page.Resources>
        <converters:TypeNameConverter x:Key="TypeNameConverter"/>
        <converters:TimeSpanToHhhmmssConverter x:Key="TimeSpanToHhhmmssConverter"/>
        <local:EndReasonToTextConverter x:Key="EndReasonToTextConverter"/>
    </Page.Resources>
    
    <Grid
        ColumnSpacing="{StaticResource TabPageColumnSpacing}"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <Grid
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Margin="0, 0, 0, 24"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <controls:IconControl
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="32"
                    Height="32"
                    FontSize="24"
                    DataContext="{x:Bind ViewModel.Instance.Icon, Mode=OneTime, TargetNullValue=ms-appx:///Poltergeist/Assets/macro_32px.png}"
                    />
                
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.Instance.Title, Mode=OneTime}"
                    Style="{StaticResource Header1Style}"
                    Margin="0"
                    />
            </Grid>

            <Pivot
                Grid.Row="1"
                >
                <Pivot.Resources>
                    <x:Double x:Key="PivotHeaderItemFontSize">16</x:Double>
                    <Thickness x:Key="PivotItemMargin">8, 16</Thickness>
                </Pivot.Resources>

                <PivotItem
                    x:Uid="/Poltergeist/Macros/InformationPivotItem"
                    >
                    <ScrollViewer
                        Style="{StaticResource VerticalScrollViewerStyle}"
                        >
                        <StackPanel>
                        
                            <Image
                                Source="{x:Bind ViewModel.Thumbnail, Mode=OneWay}"
                                Stretch="UniformToFill"
                                />

                            <TextBlock
                                Text="{x:Bind ViewModel.Instance.Template.Description, Mode=OneTime}"
                                Style="{StaticResource DetailBodyBaseMediumStyle}"
                                Margin="0, 0, 0, 16"
                                TextWrapping="Wrap" 
                                />

                            <ItemsControl
                                ItemsSource="{x:Bind ViewModel.Instance.Template.Details, Mode=OneTime}"
                                Margin="0, 0, 0, 16"
                                >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="36" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <FontIcon
                                                Glyph="&#xEDB0;"
                                                FontSize="10"
                                                VerticalAlignment="Top"
                                                Margin="8"
                                                HorizontalAlignment="Right"
                                                />

                                            <TextBlock
                                                Grid.Column="1"
                                                Text="{Binding Mode=OneWay}"
                                                TextWrapping="Wrap" 
                                                Margin="0, 2"
                                                />

                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>

                <PivotItem
                    x:Uid="/Poltergeist/Macros/OptionsPivotItem"
                    >
                    <controls:OptionListView
                        Options="{x:Bind ViewModel.UserOptions, Mode=OneTime}"
                        IsEnabled="{x:Bind ViewModel.Instance.IsLocked, Mode=OneTime, Converter={StaticResource NotConverter}}"
                        IsLocked="{x:Bind ViewModel.IsRunning, Mode=OneWay}"
                        />
                </PivotItem>

                <PivotItem
                    x:Uid="/Poltergeist/Macros/ActionsPivotItem"
                    IsEnabled="{x:Bind ViewModel.Instance.IsLocked, Mode=OneTime, Converter={StaticResource NotConverter}}"
                    >
                    <ScrollViewer
                        Style="{StaticResource VerticalScrollViewerStyle}"
                        >
                        <ItemsControl
                            ItemsSource="{x:Bind ViewModel.Instance.Template.Actions, Mode=OneTime}"
                            >
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid 
                                        Style="{StaticResource CardGridStyle}"
                                        >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="36" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <controls:IconControl
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Width="24"
                                            Height="24"
                                            FontSize="20"
                                            DataContext="{Binding Icon, Mode=OneTime, TargetNullValue=&#xE90F;}"
                                            />
                                        
                                        <StackPanel
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            >

                                            <TextBlock
                                                Text="{Binding Text, Mode=OneTime}"
                                                />

                                            <TextBlock
                                                Opacity=".5"
                                                FontSize="12"
                                                TextWrapping="Wrap"
                                                Margin="0, 2, 0, 0"
                                                Text="{Binding Description, Mode=OneTime}"
                                                Visibility="{Binding Description, Mode=OneTime, Converter={StaticResource FalsyToCollapsedConverter}}"
                                                />

                                        </StackPanel>

                                        <Button
                                            x:Uid="/Poltergeist/Macros/ActionExecuteButton"
                                            Grid.Column="3"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Click="ActionExecuteButton_Click"
                                            />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </PivotItem>

                <PivotItem
                    x:Uid="/Poltergeist/Macros/StatisticsPivotItem"
                    >
                    <ListView
                        ItemsSource="{x:Bind ViewModel.Statistics, Mode=OneWay}"
                        Margin="0"
                        >
                        <ListView.Resources>
                            <Style TargetType="ScrollViewer" BasedOn="{StaticResource VerticalScrollViewerStyle}" />
                        </ListView.Resources>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                    HorizontalAlignment="Stretch"
                                    Margin="0, 16"
                                    >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Key, Mode=OneTime}" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="{Binding Value, Mode=OneTime}" TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ListView>
                </PivotItem>
                
                <PivotItem
                    x:Uid="/Poltergeist/Macros/HistoryPivotItem"
                    >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Margin="{StaticResource ListViewHeaderMargin}"
                            Padding="0, 0, 0, 8"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".3*" />
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".3*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                x:Uid="/Poltergeist/Macros/HistoryStartTimeTextBlock"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                TextAlignment="Center"
                                />
                            <TextBlock
                                x:Uid="/Poltergeist/Macros/HistoryDurationTextBlock"
                                Grid.Column="1"
                                TextAlignment="Center"
                                FontWeight="SemiBold"
                                />
                            <TextBlock
                                x:Uid="/Poltergeist/Macros/HistoryResultTextBlock"
                                Grid.Column="2"
                                TextAlignment="Center"
                                FontWeight="SemiBold"
                                />
                            <TextBlock
                                x:Uid="/Poltergeist/Macros/HistoryCommentTextBlock"
                                Grid.Column="3"
                                TextAlignment="Center"
                                FontWeight="SemiBold"
                                />
                        </Grid>
                        <ListView
                            Grid.Row="1"
                            ItemsSource="{x:Bind ViewModel.History, Mode=OneWay}"
                            DoubleTapped="HistoryListView_DoubleTapped"
                            >
                            <ListView.Resources>
                                <Style TargetType="ScrollViewer" BasedOn="{StaticResource VerticalScrollViewerStyle}" />
                            </ListView.Resources>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Margin="0, 16"
                                        >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width=".3*" />
                                            <ColumnDefinition Width=".2*" />
                                            <ColumnDefinition Width=".2*" />
                                            <ColumnDefinition Width=".3*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding StartTime, Mode=OneTime}"
                                            />
                                        <TextBlock
                                            Grid.Column="1"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Duration, Converter={StaticResource TimeSpanToHhhmmssConverter}, Mode=OneTime}"
                                            />
                                        <TextBlock
                                            Grid.Column="2"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding EndReason, Converter={StaticResource EndReasonToTextConverter}, Mode=OneTime}"
                                            />
                                        <TextBlock
                                            Grid.Column="3"
                                            TextAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{Binding Comment, Mode=OneTime}"
                                            />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListView>
                    </Grid>
                </PivotItem>
                
                <PivotItem
                    x:Uid="/Poltergeist/Macros/MetadataPivotItem"
                    >
                    <ListView
                        ItemsSource="{x:Bind ViewModel.Metadata, Mode=OneWay}"
                        Margin="0"
                        >
                        <ListView.Resources>
                            <Style TargetType="ScrollViewer" BasedOn="{StaticResource VerticalScrollViewerStyle}" />
                        </ListView.Resources>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                    HorizontalAlignment="Stretch"
                                    Margin="0, 16"
                                    >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Key, Mode=OneTime}"
                                        FontWeight="SemiBold"
                                        VerticalAlignment="Center"
                                        />
                                    <TextBlock
                                        Grid.Column="1"
                                        Text="{Binding Value, Mode=OneTime}"
                                        TextWrapping="Wrap"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTipService.ToolTip="{Binding Value, Mode=OneTime}"
                                        />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ListView>
                </PivotItem>

            </Pivot>
        </Grid>

        <Grid
            Grid.Column="1"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <CommandBar
                    Background="Transparent"
                    Grid.Row="0"
                    DefaultLabelPosition="Right"
                    OverflowButtonVisibility="Collapsed"
                    HorizontalAlignment="Left"
                    IsOpen="False"
                    IsEnabled="{x:Bind ViewModel.Instance.IsLocked, Mode=OneTime, Converter={StaticResource NotConverter}}"
                    >

                    <AppBarElementContainer>
                        <SplitButton
                            Command="{x:Bind ViewModel.StartCommand, Mode=OneTime}"
                            IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay, Converter={StaticResource NotConverter}}"
                            >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Glyph="&#xE768;"
                                    FontSize="16"
                                    >
                                    <interactivity:Interaction.Behaviors>
                                        <interactivity:DataTriggerBehavior Binding="{x:Bind ViewModel.IsValid, Mode=OneWay}" ComparisonCondition="Equal" Value="False">
                                            <interactivity:ChangePropertyAction PropertyName="Glyph" Value="&#xF140;"/>
                                        </interactivity:DataTriggerBehavior>
                                    </interactivity:Interaction.Behaviors>
                                </FontIcon>
                                <TextBlock
                                    x:Uid="/Poltergeist/Macros/RunAppBarButtonTextBlock"
                                    Margin="8, 0, 0, 0"
                                    Grid.Column="1"
                                    />
                            </Grid>
                            <SplitButton.Flyout>
                                <MenuFlyout
                                    x:Name="RunMenuFlyout"
                                    Placement="RightEdgeAlignedTop"
                                    >
                                    <MenuFlyoutItem
                                        x:Uid="/Poltergeist/Macros/RunDefaultMenuFlyoutItem"
                                        Icon="Play"
                                        Command="{x:Bind ViewModel.StartCommand, Mode=OneTime}"
                                        />
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>
                    </AppBarElementContainer>
                    
                    <AppBarElementContainer>
                        <SplitButton
                            Command="{x:Bind ViewModel.StopCommand, Mode=OneTime}"
                            IsEnabled="{x:Bind ViewModel.IsRunning, Mode=OneWay}"
                            >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon
                                    Glyph="&#xE71A;"
                                    FontSize="16"
                                    >
                                </FontIcon>
                                <TextBlock
                                    x:Uid="/Poltergeist/Macros/StopAppBarButtonTextBlock"
                                    Margin="8, 0, 0, 0"
                                    Grid.Column="1"
                                    />
                            </Grid>
                            <SplitButton.Flyout>
                                <MenuFlyout
                                    x:Name="StopMenuFlyout"
                                    Placement="RightEdgeAlignedTop"
                                    >
                                    <MenuFlyoutItem
                                        x:Uid="/Poltergeist/Macros/TerminateMenuFlyoutItem"
                                        Icon="Stop"
                                        Command="{x:Bind ViewModel.TerminateCommand, Mode=OneTime}"
                                        />
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>
                    </AppBarElementContainer>

                </CommandBar>

                <CommandBar
                    Grid.Column="1"
                    Background="Transparent"
                    Grid.Row="0"
                    DefaultLabelPosition="Right"
                    OverflowButtonVisibility="Collapsed"
                    HorizontalAlignment="Left"
                    IsOpen="False"
                    >
                    <AppBarElementContainer
                        VerticalAlignment="Center"
                        >
                        <TextBlock
                            Text="{x:Bind ViewModel.Duration, Mode=OneWay}"
                            VerticalAlignment="Center"
                            Margin="8, 0"
                        />
                    </AppBarElementContainer>
                    
                    <AppBarElementContainer
                        VerticalAlignment="Center"
                        >
                        <Grid>
                            <ProgressRing
                                IsActive="{x:Bind ViewModel.IsRunning, Mode=OneWay}"
                                Width="24"
                                Height="24"
                                VerticalAlignment="Center"
                                Margin="8, 0"
                            />
                            <FontIcon
                                Glyph="&#xEB90;"
                                VerticalAlignment="Center"
                                Margin="8, 0"
                                HorizontalAlignment="Center"
                                Foreground="Red"
                                ToolTipService.ToolTip="{x:Bind ViewModel.ExceptionMessage, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.ExceptionMessage, Mode=OneWay, Converter={StaticResource FalsyToCollapsedConverter}}"
                                />
                        </Grid>
                    </AppBarElementContainer>

                </CommandBar>
            </Grid>

            <Grid
                Grid.Row="1"
                Visibility="{x:Bind ViewModel.IsValid, Converter={StaticResource TruthyToCollapsedConverter}, Mode=OneTime}"
                >
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource SecondaryTextColor}"
                    Text="{x:Bind ViewModel.InvalidationMessage, Mode=OneTime}"
                    />
            </Grid>
            
            <Pivot
                Grid.Row="1"
                ItemsSource="{x:Bind ViewModel.Panels, Mode=OneTime}"
                SelectedItem="{x:Bind ViewModel.SelectedPanel, Mode=OneWay}"
                >
                <Pivot.Resources>
                    <x:Double x:Key="PivotHeaderItemFontSize">16</x:Double>
                    <Thickness x:Key="PivotItemMargin">16</Thickness>
                </Pivot.Resources>
                <Pivot.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding Header, Mode=OneTime}"
                            >
                        </TextBlock>
                    </DataTemplate>
                </Pivot.HeaderTemplate>
                <Pivot.ItemTemplate>
                    <DataTemplate>
                        <instruments:MacroPanelControl
                            Instruments="{Binding Instruments, Mode=OneTime}"
                            />
                    </DataTemplate>
                </Pivot.ItemTemplate>
            </Pivot>
        </Grid>
    </Grid>
</Page>