    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:views="using:Poltergeist.Views"
    xmlns:informations="using:Poltergeist.Macros.Informations"
    xmlns:models="clr-namespace:Poltergeist.Models"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="White"
    d:DataContext="{d:DesignInstance models:MacroGroup}"
    KeepAlive="True"
    mc:Ignorable="d">
    <Page.Resources>
