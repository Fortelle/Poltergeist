<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Poltergeist.Views.Options.PasswordOptionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Poltergeist.Views.Options"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:configs="using:Poltergeist.Automations.Parameters"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance configs:PasswordOption}"
    >

    <PasswordBox
        Password="{x:Bind Value, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
        PlaceholderText="{x:Bind Placeholder, Mode=OneTime}"
        MaxLength="{x:Bind MaxLength, Mode=OneTime}"
        >
    </PasswordBox>
</UserControl>
